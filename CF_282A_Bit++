import java.util.Scanner;
public class CF_Bit {
	public static void main(String[] args){
		Scanner input= new Scanner(System.in);
		int n,i,j;
		String s="";
		n=input.nextInt();
		int x=0;
		for(i=1;i<=n;i++){
			s=input.next();
			for(j=0;j<s.length();j++){
				if(s.charAt(j)=='+'){
					x++;
					break;
				}
				else if(s.charAt(j)=='-'){
					x--;
					break;
				}
			}
		}
		System.out.println(x);
	}
}
